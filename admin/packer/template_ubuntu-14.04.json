{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "flocker_branch": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "source_ami": "ami-7388cd19",
        "instance_type": "t1.micro",
        "ssh_username": "ubuntu",
        "ami_name": "ubuntu-14.04_flocker_{{timestamp}}",
        "ami_groups": ["all"],
        "ami_regions": ["us-east-1", "us-west-1", "us-west-2"]
    }],
    "provisioners": [{
        "type": "shell",
        "script": "{{template_dir}}/provision_ubuntu-14.04.sh",
        "environment_vars": [
            "flocker_branch={{user `flocker_branch`}}"
        ],
        "execute_command": "{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    }]
}
