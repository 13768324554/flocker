{
    "variables": {
        "DOCKER_VERSION": "{{env `DOCKER_VERSION`}}",
        "SWARM_VERSION": "{{env `SWARM_VERSION`}}"
    },
    "builders": [{
        "type": "amazon-ebs",
        "region": "",
        "source_ami": "",
        "instance_type": "m3.medium",
        "ssh_username": "ubuntu",
        "ami_name": "clusterhq_ubuntu-16.04_docker_{{timestamp}}",
        "ami_groups": ["all"],
        "ami_regions": [],
        "tags": {
            "DOCKER_VERSION": "{{user `DOCKER_VERSION`}}",
            "SWARM_VERSION": "{{user `SWARM_VERSION`}}"
        }
    }],
    "provisioners": [
        {
            "type": "shell",
            "script": "{{template_dir}}/provision_ubuntu-16.04_docker.sh",
            "environment_vars": [
                "DOCKER_VERSION={{user `DOCKER_VERSION`}}",
                "SWARM_VERSION={{user `SWARM_VERSION`}}"
            ],
            "execute_command": "{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        }
    ]
}
